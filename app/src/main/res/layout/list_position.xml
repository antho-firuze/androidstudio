<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools">


<LinearLayout
        android:id="@+id/layout_border"
        android:orientation="vertical"
        android:background="@drawable/border_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" android:layout_marginTop="0dp"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/tv_name"
                    android:text="PT Jasa Marga Indonesia"
                    android:textSize="22dp"
                    android:paddingLeft="4dp"
                    android:background="#4738A2"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/tv_type"
                    android:text="Jalan Raya dan Trasportasi"
                    android:textSize="12dp"
                    android:textStyle="italic"
                    android:paddingLeft="4dp"
                    android:background="#4738A2"
                    android:textColor="@android:color/white"
                    android:paddingBottom="16dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="17mm"
                android:layout_height="match_parent" android:layout_marginTop="0dp">

            <TextView
                    android:id="@+id/tv_value"
                    android:text="1,250,000"
                    android:textSize="16dp"
                    android:textAlignment="textEnd"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="#4738A2"
                    android:textColor="@android:color/white"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</android.support.constraint.ConstraintLayout>